<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:lottie_autoPlay="true"
            app:lottie_fileName="moving.json"
            app:lottie_loop="true"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/register_logo"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:src="@drawable/easiridelogo"
            android:tint="@color/colorPrimary" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="8dp"
        android:layout_marginTop="24dp"
        android:text="Explore a New Way to Travel\nwith Eziride"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_phone_btn"
        android:text="Continue With Phone Number"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginTop="32dp"
        android:padding="14dp"
        android:background="@drawable/common_buttons_bg"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="      OR     "
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="14dp"
        android:weightSum="1">

        <com.google.android.gms.common.SignInButton
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:text="Google"
            android:textAllCaps="false"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="52dp"
            android:text="Facebook"
            android:textColor="#5e5e5e"
            android:drawableLeft="@drawable/ic_facebook"
            android:padding="14dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.5"
            android:textAllCaps="false"
            android:background="@drawable/buttonbackground_fb" />

    </LinearLayout>




</LinearLayout>